<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_num_tv"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:background="@drawable/check_left_color_636b8f"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:text="001"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/check_right_color_ffffff">

            <TextView
                android:id="@+id/item_value_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toLeftOf="@+id/item_cb"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="投料1"
                android:textColor="@color/black6"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/item_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:button="@drawable/icon_checkbox_style"
                android:checked="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
