<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_tv"
            android:layout_width="55dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:drawableLeft="@mipmap/icon_top_back"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/black6"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="@color/black6"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/right_ib"
            android:layout_width="55dip"
            android:layout_height="match_parent"
            android:layout_marginRight="5dip"
            android:background="@null"
            android:src="@mipmap/icon_top_back"
            android:visibility="invisible" />
    </LinearLayout>

    <EditText
        android:id="@+id/user_name_et"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:hint="请输入手机号码"
        android:inputType="numberDecimal"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:textColor="@color/black6"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:inputType="numberDecimal"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:textColor="@color/black6"
            android:textSize="15sp" />

        <Button
            android:id="@+id/code_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/code_button_bg"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/new_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:textColor="@color/black6"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/confirm_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:hint="请确认新密码"
        android:inputType="textPassword"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:textColor="@color/black6"
        android:textSize="15sp" />

    <Button
        android:id="@+id/submit_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/submit_button_bg"
        android:text="确认重置"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
